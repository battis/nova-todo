{
  "identifier": "jasonplatts.TODO",
  "name": "TODO",
  "organization": "Jason Platts",
  "description": "Displays TODO and FIXME tags within a sidebar tree view.",
  "license":"MIT",
  "version": "0.5",
  "repository":"https://github.com/jasonplatts/nova-todo",
  "bugs":"https://github.com/jasonplatts/nova-todo/issues",
  "funding":"https://github.com/sponsors/jasonplatts",
  "categories": ["sidebars"],
  
  "main": "main.js",
  
  "activationEvents": [
    "onLanguage:javascript"
  ],
  
  "entitlements": {
    "filesystem": "readonly",
    "process": true
  },
  
  "config": [
    {
      "key": "todo.exclude-global-names.section",
      "title": "Global Ignored File & Directory Names",
      "description": "Add file & directory names that should be excluded globally.",
      "type": "section",
      "children": [
        {
          "key": "todo.global-ignore-names",
          "title": "Ignored Names",
          "description": "Provide a list of comma separated directory and file names that should be ignored in all workspaces. File names must include the file extension. For example: test.txt, example.js, sample.php.",
          "type": "text",
          "default": ""
        }
      ]
    },
    {
      "key": "todo.exclude-global-extensions.section",
      "title": "Global Ignored File Extensions",
      "description": "Add file extensions that should be excluded globally.",
      "type": "section",
      "children": [
        {
          "key": "todo.global-ignore-extensions",
          "title": "Ignored Extensions",
          "description": "Provide a list of comma separated file extensions that should be ignored. Extensions should include \".\" before the extension. For example: .txt, .js, .php.",
          "type": "text",
          "default": ""
        }
      ]
    }
  ],
  
  "config-workspace": [
    {
      "key": "todo.exclude-workspace-paths.section",
      "title": "Ignored File & Directory Paths",
      "description": "Add specific file and directory paths that should be excluded in the current workspace.",
      "type": "section",
      "children": [
        {
          "key": "todo.selected-ignore-path",
          "title": "Path",
          "description": "Select a file or directory path to be ignored in the current workspace.",
          "type": "path",
          "allowFiles": true,
          "allowFolders": true
        },
        {
          "key": "todo.add-selected-path",
          "title": "Ignore Above Path",
          "type": "command",
          "command": "todo.addPath"
        },
        {
          "key": "todo.workspace-ignore-paths",
          "title": "Ignored Paths",
          "description": "Provide a list of comma separated directory and file names that should be ignored by the extension in the current workspace.",
          "type": "text",
          "default": ""
        }
      ]
    },
    {
      "key": "todo.exclude-workspace-names.section",
      "title": "Ignored File & Directory Names",
      "description": "Add file and directory names that should be excluded in the current workspace, regardless of path.",
      "type": "section",
      "children": [
        {
          "key": "todo.workspace-ignore-names",
          "title": "Ignored Names",
          "description": "Provide a list of comma separated directory and file names that should be ignored in the current workspace. File names must include the file extension. For example: test.txt, example.js, sample.php.",
          "type": "text",
          "default": ""
        }
      ]
    },
    {
      "key": "todo.exclude-workspace-extensions.section",
      "title": "Ignored File Extensions",
      "description": "Add file extensions that should be excluded in the current workspace.",
      "type": "section",
      "children": [
        {
          "key": "todo.workspace-ignore-extensions",
          "title": "Ignored Extensions",
          "description": "Provide a list of comma separated file extensions that should be ignored. Extensions should include \".\" before the extension. For example: .txt, .js, .php.",
          "type": "text",
          "default": ""
        }
      ]
    },
    {
      "key": "todo.include-workspace-keywords.section",
      "title": "Included Tags",
      "description": "TODO and FIXME tags are always searched. However, additional tags can be added below. Keep in mind that too many tags can cause slow performance in larger workspaces.",
      "type": "section",
      "children": [
        {
          "key": "todo.workspace-keyword-broken",
          "title": "BROKEN",
          "type": "boolean",
          "default": false
        },
        {
          "key": "todo.workspace-keyword-bug",
          "title": "BUG",
          "type": "boolean",
          "default": false
        },
        {
          "key": "todo.workspace-keyword-debug",
          "title": "DEBUG",
          "type": "boolean",
          "default": false
        },
        {
          "key": "todo.workspace-keyword-deprecated",
          "title": "DEPRECATED",
          "type": "boolean",
          "default": false
        },
        {
          "key": "todo.workspace-keyword-example",
          "title": "EXAMPLE",
          "type": "boolean",
          "default": false
        },
        {
          "key": "todo.workspace-keyword-error",
          "title": "ERROR",
          "type": "boolean",
          "default": false
        },
        {
          "key": "todo.workspace-keyword-err",
          "title": "ERR",
          "type": "boolean",
          "default": false
        },
        {
          "key": "todo.workspace-keyword-fail",
          "title": "FAIL",
          "type": "boolean",
          "default": false
        },
        {
          "key": "todo.workspace-keyword-fatal",
          "title": "FATAL",
          "type": "boolean",
          "default": false
        },
        {
          "key": "todo.workspace-keyword-hack",
          "title": "HACK",
          "type": "boolean",
          "default": false
        },
        {
          "key": "todo.workspace-keyword-idea",
          "title": "IDEA",
          "type": "boolean",
          "default": false
        },
        {
          "key": "todo.workspace-keyword-info",
          "title": "INFO",
          "type": "boolean",
          "default": false
        },
        {
          "key": "todo.workspace-keyword-note",
          "title": "NOTE",
          "type": "boolean",
          "default": false
        },
        {
          "key": "todo.workspace-keyword-optimize",
          "title": "OPTIMIZE",
          "type": "boolean",
          "default": false
        },
        {
          "key": "todo.workspace-keyword-question",
          "title": "QUESTION",
          "type": "boolean",
          "default": false
        },
        {
          "key": "todo.workspace-keyword-refactor",
          "title": "REFACTOR",
          "type": "boolean",
          "default": false
        },
        {
          "key": "todo.workspace-keyword-remove",
          "title": "REMOVE",
          "type": "boolean",
          "default": false
        },
        {
          "key": "todo.workspace-keyword-review",
          "title": "REVIEW",
          "type": "boolean",
          "default": false
        },
        {
          "key": "todo.workspace-keyword-task",
          "title": "TASK",
          "type": "boolean",
          "default": false
        },
        {
          "key": "todo.workspace-keyword-trace",
          "title": "TRACE",
          "type": "boolean",
          "default": false
        },
        {
          "key": "todo.workspace-keyword-update",
          "title": "UPDATE",
          "type": "boolean",
          "default": false
        },
        {
          "key": "todo.workspace-keyword-warn",
          "title": "WARN",
          "type": "boolean",
          "default": false
        },
        {
          "key": "todo.workspace-keyword-warning",
          "title": "WARNING",
          "type": "boolean",
          "default": false
        }
      ]
    }
  ],
  
  "sidebars": [
    {
      "id": "todo",
      "name": "TODO",
      "smallImage": "todo-small",
      "largeImage": "todo-large",
      "sections": [
        {
          "id": "todo",
          "name": "TODOS",
          "allowMultiple": false,
          "placeholderText": "No profiles have been created.",
          "placeholderImage": "mysidebar-placeholder",
          "headerCommands": [
            {
              "title": "Refresh",
              "image": "__builtin.refresh",
              "tooltip": "Force Refresh",
              "command": "todo.refresh"
            }
          ],
          "contextCommands": [
            {
              "title": "Open",
              "command": "todo.openFile"
              
            },
            {
              "title": "Ignore File",
              "command": "todo.ignoreFile"
              
            },
            {
              "title": "Ignore Parent Directory",
              "command": "todo.ignoreParentDirectory"
            }
          ]
        }
      ]
    }
  ]
}
