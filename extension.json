{
    "identifier": "jasonplatts.TODO",
    "name": "TODO",
    "organization": "Jason Platts",
    "description": "Lorem ipsum, dolor sit amet.",
    "version": "1.0",
    "categories": ["sidebars"],
    
    "main": "main.js",
    
    "activationEvents": [
        "onLanguage:javascript"
    ],
    
    "entitlements": {
        "filesystem": "readonly"
    },
    
    "sidebars": [
        {
            "id": "todo",
            "name": "TODO",
            "smallImage": "todo-small",
            "smallSelectedImage": "mysidebar-small-selected",
            "largeImage": "todo-large",
            "largeSelectedImage": "mysidebar-large-selected",
            "headerCommands": [
                {
                    "title": "Remove",
                    "image": "__builtin.refresh",
                    "tooltip": "Remove the selected profiles",
                    "command": "todo.remove"
                }
            ],
            "sections": [
                {
                    "id": "todo",
                    "name": "TODOS",
                    "allowMultiple": false,
                    "placeholderText": "No profiles have been created.",
                    "placeholderImage": "mysidebar-placeholder",
                    "headerCommands": [
                        {
                            "title": "Group By",
                            "tooltip": "Group by File or Tag",
                            "command": "todo.group"
                        },
                        {
                            "title": "Remove",
                            "image": "__builtin.refresh",
                            "tooltip": "Force Refresh",
                            "command": "todo.refresh"
                        }
                    ],
                    "contextCommands": [
                        {
                            "title": "Open",
                            "command": "todo.remove",
                            "when": "viewItem != null"
                        },
                        {
                            "title": "Show in Finder",
                            "command": "todo.showInFinder",
                            "when": "viewItem != null"
                        }
                    ]
                }
            ]
        }
    ]
}
